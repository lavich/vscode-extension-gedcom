{
  "name": "vscode-gedcom-dev",
  "displayName": "GEDCOM Language with Validation (Dev)",
  "description": "GEDCOM file language support with real-time validation for VS Code",
  "version": "0.0.5",
  "preview": true,
  "publisher": "florianguitton",
  "license": "Apache-2.0",
  "author": {
    "name": "Florian Guitton",
    "url": "https://github.com/fguitton"
  },
  "keywords": [
    "gedcom",
    "ged",
    "genealogy",
    "validation"
  ],
  "homepage": "https://github.com/fguitton/vscode-gedcom/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/fguitton/vscode-gedcom"
  },
  "bugs": {
    "url": "https://github.com/fguitton/vscode-gedcom/issues"
  },
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#3a3d41",
    "theme": "dark"
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.44.0",
    "typescript": "^4.5.5"
  },
  "activationEvents": [
    "onLanguage:gedcom"
  ],
  "contributes": {
    "languages": [
      {
        "id": "gedcom",
        "aliases": [
          "GEDCOM",
          "gedcom"
        ],
        "extensions": [
          ".ged",
          ".gedcom"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "gedcom",
        "scopeName": "source.gedcom",
        "path": "./syntaxes/gedcom.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "GEDCOM",
      "properties": {
        "gedcom.validation.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable GEDCOM validation"
        },
        "gedcom.validation.maxProblems": {
          "type": "number",
          "default": 100,
          "description": "Maximum number of problems to report"
        }
      }
    }
  }
}