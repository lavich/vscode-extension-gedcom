{
  "name": "gedcom-vscode",
  "displayName": "GEDCOM Language with Validation (Dev)",
  "description": "GEDCOM file language support with real-time validation for VS Code",
  "version": "0.0.5",
  "preview": true,
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p .",
    "watch": "tsc -watch -p .",
    "open": "code --extensionDevelopmentPath=$PW"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.44.0",
    "typescript": "^4.5.5"
  },
  "publisher": "lavich",
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "gedcom",
    "genealogy",
    "validation",
    "syntax"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:gedcom"
  ],
  "contributes": {
    "languages": [
      {
        "id": "gedcom",
        "aliases": [
          "GEDCOM",
          "gedcom"
        ],
        "extensions": [
          ".ged",
          ".gedcom"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "gedcom",
        "scopeName": "source.gedcom",
        "path": "./syntaxes/gedcom.tmLanguage.json"
      }
    ]
  }
}
