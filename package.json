{
  "name": "gedcom-vscode",
  "displayName": "GEDCOM Language with Validation (Dev)",
  "description": "GEDCOM file language support with real-time validation for VS Code",
  "version": "0.0.7",
  "preview": true,
  "main": "dist/extension",
  "scripts": {
    "test": "vitest",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p .",
    "watch": "tsc -watch -p .",
    "open": "code --extensionDevelopmentPath=$PWD"
  },
  "dependencies": {
    "ts-brand": "^0.2.0",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "vscode": "^1.1.37"
  },
  "publisher": "lavich",
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "gedcom",
    "genealogy",
    "validation",
    "syntax"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:gedcom"
  ],
  "contributes": {
    "languages": [
      {
        "id": "gedcom",
        "aliases": [
          "GEDCOM",
          "gedcom"
        ],
        "extensions": [
          ".ged",
          ".gedcom"
        ]
      }
    ]
  }
}
