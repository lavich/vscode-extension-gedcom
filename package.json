{
  "name": "vscode-extention-gedcom",
  "displayName": "GEDCOM Validator",
  "description": "VS Code extension for GEDCOM file validation with real-time syntax checking",
  "author": "Your Name",
  "license": "MIT",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/lavich/vscode-extention-gedcom"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run compile:client && npm run compile:server",
    "compile:client": "cd client && npm run compile",
    "compile:server": "cd server && npm run compile",
    "watch": "npm run watch:core & npm run watch:lsp & npm run watch:vscode",
    "watch:core": "npm run watch -w packages/gedcom-core",
    "watch:lsp": "npm run watch -w packages/gedcom-lsp",
    "watch:vscode": "npm run watch -w packages/gedcom-vscode",
    "open:code": "code --extensionDevelopmentPath=$PWD/packages/gedcom-vscode",
    "lint": "eslint"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/node": "^24.3.0",
    "eslint": "^9.13.0",
    "mocha": "^10.3.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1"
  }
}
