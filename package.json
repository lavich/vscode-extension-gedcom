{
  "name": "gedcom-vscode",
  "displayName": "GEDCOM",
  "description": "GEDCOM file language support with real-time validation for VS Code",
  "publisher": "lavich",
  "version": "0.0.5",
  "author": "Andrei Lobanov",
  "repository": "https://github.com/lavich/vscode-extension-gedcom.git",
  "icon": "images/icon.png",
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "keywords": [
    "gedcom",
    "genealogy",
    "family tree",
    "validation",
    "syntax",
    "parser"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:gedcom"
  ],
  "contributes": {
    "languages": [
      {
        "id": "gedcom",
        "aliases": [
          "GEDCOM",
          "gedcom"
        ],
        "extensions": [
          ".ged",
          ".gedcom"
        ]
      }
    ]
  },
  "main": "dist/extension.js",
  "scripts": {
    "watch": "tsc -watch -p .",
    "open": "code --extensionDevelopmentPath=$PWD",
    "lint": "eslint .",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "compile": "tsc -p .",
    "vscode:prepublish": "npm run compile",
    "prepare": "husky"
  },
  "dependencies": {
    "ts-brand": "^0.2.0",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-protocol": "^3.17.5",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@eslint/markdown": "^7.2.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vitest": "^3.2.4",
    "vscode": "^1.1.37"
  },
  "lint-staged": {
    "src/*.{ts,tsx}": "vitest related --run"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
